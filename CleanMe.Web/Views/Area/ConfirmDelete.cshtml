@model CleanMe.Application.ViewModels.AreaViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Delete Area</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this Area?
</div>

<div class="mb-3">
    <label class="form-label">Name</label>
    <p class="form-control-plaintext">@Model.Name</p>
</div>

<div class="mb-3">
    <label class="form-label">Report Code</label>
    <p class="form-control-plaintext">@Model.ReportCode</p>
</div>

<!-- Add additional read-only fields if needed -->

<form asp-action="ConfirmDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="areaId" />
    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">Cancel</a>
    @* <a asp-action="Index" class="btn btn-secondary">Cancel</a> *@
</form>