@model CleanMe.Application.ViewModels.ClientContactViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Delete Client Contact</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this Client Contact?
</div>

<div class="mb-3">
    <label class="form-label">Full Name:</label>
    <p class="form-control-plaintext">@Model.Fullname</p>
</div>

<div class="mb-3">
    <label class="form-label">Job Title:</label>
    <p class="form-control-plaintext">@Model.JobTitle</p>
</div>

<div class="mb-3">
    <label class="form-label">Mobile Phone:</label>
    <p class="form-control-plaintext">@Model.PhoneMobile</p>
</div>

<div class="mb-3">
    <label class="form-label">Email:</label>
    <p class="form-control-plaintext">@Model.Email</p>
</div>

<!-- Add additional read-only fields if needed -->

<form asp-action="ConfirmDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="clientContactId" />
    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>