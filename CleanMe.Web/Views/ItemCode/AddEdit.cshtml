@using CleanMe.Application.ViewModels
@using CleanMe.Domain.Enums
@using CleanMe.Shared.Helpers

@model CleanMe.Application.ViewModels.ItemCodeViewModel

@{
    ViewData["Title"] = Model.itemCodeId == 0 ? "Add Item code" : "Edit Item code";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEdit" method="post" id="ItemCodeForm" novalidate>
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.itemCodeId)

    @Html.LabeledTextBoxFor(model => model.Code)

    @Html.LabeledTextBoxFor(model => model.ItemName)

    @Html.LabeledTextBoxFor(model => model.ItemDescription)

    @Html.LabeledTextBoxFor(model => model.PurchasesDescription)

    @Html.LabeledTextBoxFor(model => model.PurchasesUnitRate)

    @Html.LabeledTextBoxFor(model => model.PurchasesXeroAccount)

    @Html.LabeledTextBoxFor(model => model.SalesDescription)

    @Html.LabeledTextBoxFor(model => model.SalesUnitRate)

    @Html.YesNoButtonsFor(model => model.IsActive)

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<h3 class="mt-4">Areas</h3>
