@model CleanMe.Application.ViewModels.ItemCodeViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Delete Item code</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this Item code?
</div>

<div class="mb-3">
    <label class="form-label">Code</label>
    <p class="form-control-plaintext">@Model.Code</p>
</div>

<div class="mb-3">
    <label class="form-label">Item name</label>
    <p class="form-control-plaintext">@Model.ItemName</p>
</div>

<div class="mb-3">
    <label class="form-label">Item description</label>
    <p class="form-control-plaintext">@Model.ItemDescription</p>
</div>

<!-- Add additional read-only fields if needed -->

<form asp-action="ConfirmDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="itemCodeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>