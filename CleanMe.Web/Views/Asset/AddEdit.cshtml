@using CleanMe.Application.ViewModels
@using CleanMe.Domain.Enums
@using CleanMe.Shared.Helpers

@model CleanMe.Application.ViewModels.AssetViewModel

@{
    ViewData["Title"] = Model.assetId == 0 ? "Add Asset" : "Edit Asset";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEdit" method="post" id="AssetForm" novalidate>
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <input asp-for="assetId" type="hidden" />

    @Html.LabeledTextBoxFor(model => model.MdReference)

    @Html.LabeledTextBoxFor(model => model.Name)

    @Html.LabeledTextBoxFor(model => model.ClientReference)

    @Html.LabeledDropDownFor(model => model.clientId, Model.Clients)

    @Html.LabeledDropDownFor(model => model.assetLocationId, Model.AssetLocations)

    @Html.LabeledDropDownFor(model => model.itemCodeId, Model.ItemCodes)

    @Html.LabeledTextBoxFor(model => model.Position)

    @Html.LabeledTextBoxFor(model => model.Access)

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
    </script>
}