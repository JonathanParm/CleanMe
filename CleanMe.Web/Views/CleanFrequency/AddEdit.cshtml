@using CleanMe.Application.ViewModels
@using CleanMe.Domain.Enums
@using CleanMe.Shared.Helpers

@model CleanMe.Application.ViewModels.CleanFrequencyViewModel

@{
    ViewData["Title"] = Model.cleanFrequencyId == 0 ? "Add Clean Frequency" : "Edit Clean Frequency";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEdit" method="post" id="cleanFrequencyForm" novalidate>
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <input asp-for="cleanFrequencyId" type="hidden" />

    @Html.LabeledTextBoxFor(model => model.Description)

    @Html.LabeledTextBoxFor(model => model.Code)

    @Html.LabeledTextBoxFor(model => model.SortOrder)

    @Html.YesNoButtonsFor(model => model.IsActive)

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
    </script>
}