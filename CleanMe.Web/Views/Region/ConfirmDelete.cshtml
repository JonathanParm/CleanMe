@model CleanMe.Application.ViewModels.RegionViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Delete Region</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this region?
</div>

<div class="mb-3">
    <label class="form-label">Name</label>
    <p class="form-control-plaintext">@Model.Name</p>
</div>

<div class="mb-3">
    <label class="form-label">Report Code</label>
    <p class="form-control-plaintext">@Model.ReportCode</p>
</div>

<!-- Add additional read-only fields if needed -->

<form asp-action="ConfirmDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="regionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>